.logo {
    font-family: 'Pacifico', cursive;
    color: #ff6e40;
    width: 100%;
    text-align: center;
    padding: 10px;
}

.menu-controls {
    list-style: none;
    text-decoration: none;
}

#menu{
    margin: 0;
}

.mobile-menu{
    position: fixed;
    bottom: 5%;
    right: 5%;
    z-index: 10;
    border-radius: 50%;
    display: table-cell;
    text-align: center;
    vertical-align: center;
    background-color: #ff6e40;
    width: 3.5em;
    height: 3.5em;
    transition: ease-in-out 0.2s;
    z-index: 3;
}

.mobile-menu.ng-hide{
    bottom: 5%;
    right: 5%;
}

.mobile-menu:hover{
    background-color: #ff4a11;
    transition: 0.2s;
}

.mobile-menu-search{
    bottom: 23%;
    z-index: 1;
}


.mobile-menu-search.expaned{
    border-radius: 1.75em;
    width: 20em;
}

.search-input{
    margin-top: 0.75em;
    width: 15em;
    background-color: white;
    border: none;
    z-index: 5;
}

.mobile-menu-add{
    bottom: 14%;
    z-index: 2;
}

.menu-icon{
    color: #323232;
    transform:translate(0%,90%);
}