.note-thumbnail{
    margin-bottom: 5px;
    box-sizing: border-box;
    height: 20vh;
    box-shadow: none;
    border-right: 5px solid white;
    -webkit-filter: opacity(80%);
    filter: opacity(80%);
    transition: 0.2s;
   display: table-cell;
   text-align: center;
   padding: 1em;
   background-color: #f3f3f3;
}

.note-thumbnail:hover{
    transition: 0.2s;
    -webkit-filter: opacity(100%);
    filter: opacity(100%);
}

.thumbnail-space{
    padding: 0;
    box-shadow: none;
    border: none;
}

.thumbnail-icon{
   color: #a2a2a2
}

.note-title{
    position: absolute;
    text-align: left;
    background-color: rgba(192, 192, 192, 0.8);
    padding: 3px;
    bottom: 0;
    left: 0;
    width: 100%;
    word-wrap: break-word;
}

.home-msg{
    position: absolute;
    width: 100%;
    text-align: center;
    font-family: 'Pacifico', cursive;
    color: #dfdfdf;
    margin-top: 6em;
}

.search-panel{
    margin: 10px;
}

